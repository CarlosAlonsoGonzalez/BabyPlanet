<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Principal"
    android:backgroundTintMode="screen"
    tools:context=".Proyecto.Inicio.Login">

  <ImageView
      android:id="@+id/ivIconoApp"
      android:layout_width="0dp"
      android:layout_height="250dp"
      android:background="#5D7CB1"
      app:layout_constraintBottom_toTopOf="@+id/divider5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTituloApp"
      app:layout_constraintVertical_bias="0.5"
      app:srcCompat="@drawable/logo_app" />

  <EditText
      android:id="@+id/etCorreo"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:background="@android:drawable/dialog_holo_light_frame"
      android:backgroundTint="@color/white"
      android:ems="10"
      android:hint="Correo electrónico"
      android:inputType="textEmailAddress"
      android:textAlignment="center"
      app:layout_constraintBottom_toTopOf="@+id/etContraseña"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.491"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTexto"
      app:layout_constraintVertical_bias="0.5" />

  <EditText
      android:id="@+id/etContraseña"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:background="@android:drawable/dialog_holo_light_frame"
      android:backgroundTint="@color/white"
      android:ems="10"
      android:hint="Contraseña"
      android:inputType="textPassword"
      android:textAlignment="center"
      app:layout_constraintBottom_toTopOf="@+id/btInicio"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.471"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/etCorreo"
      app:layout_constraintVertical_bias="0.5" />

  <Button
      android:id="@+id/btInicio"
      android:layout_width="wrap_content"
      android:layout_height="49dp"
      android:layout_marginTop="24dp"
      android:backgroundTint="@color/Claro"
      android:text="Iniciar Sesion"
      android:textColor="@color/Oscuro"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/divider4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/etContraseña"
      app:layout_constraintVertical_bias="0.5" />

  <TextView
      android:id="@+id/tvTituloApp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:background="#5D7CB2"
      android:fontFamily="sans-serif-condensed"
      android:text="Baby Planet"
      android:textAlignment="center"
      android:textAllCaps="false"
      android:textColor="@color/Oscuro"
      android:textSize="48sp"
      android:textStyle="italic"
      app:layout_constraintBottom_toTopOf="@+id/ivIconoApp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.5" />

  <Button
      android:id="@+id/btRegistro"
      android:layout_width="wrap_content"
      android:layout_height="49dp"
      android:backgroundTint="@color/Claro"
      android:text="REGISTRAte"
      android:textColor="@color/Oscuro"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTexto2"
      app:layout_constraintVertical_bias="0.5" />

  <TextView
      android:id="@+id/tvTexto"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:text="Inicia sesion con tu cuenta"
      android:textColor="#FEFEFE"
      android:textSize="16sp"
      android:textStyle="italic"
      app:layout_constraintBottom_toTopOf="@+id/etCorreo"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/divider5"
      app:layout_constraintVertical_bias="0.5" />

  <TextView
      android:id="@+id/tvTexto2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="¿Aun no tienes cuenta?"
      android:textColor="#FEFEFE"
      app:layout_constraintBottom_toTopOf="@+id/btRegistro"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/divider4"
      app:layout_constraintVertical_bias="0.5" />

  <View
      android:id="@+id/divider4"
      android:layout_width="409dp"
      android:layout_height="5dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintBottom_toTopOf="@+id/tvTexto2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btInicio"
      app:layout_constraintVertical_bias="0.5" />

  <View
      android:id="@+id/divider5"
      android:layout_width="409dp"
      android:layout_height="5dp"
      android:background="?android:attr/listDivider"
      app:layout_constraintBottom_toTopOf="@+id/tvTexto"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivIconoApp"
      app:layout_constraintVertical_bias="0.5" />

  <TextView
      android:id="@+id/tvErrLogin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#F44336"
      app:layout_constraintBottom_toTopOf="@+id/btInicio"
      app:layout_constraintEnd_toEndOf="@+id/btInicio"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="@+id/btInicio" />

</androidx.constraintlayout.widget.ConstraintLayout>